{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false,
    },
    {
      "name": "THRS: Debug simulation thrusters",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/cli/__main__.py",
      "args": ["run", "thrusters"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
    }
  ],
}